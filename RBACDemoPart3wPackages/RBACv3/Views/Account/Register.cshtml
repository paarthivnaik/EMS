@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form",id="registrationnForm" }))
{
    @Html.AntiForgeryToken()  
    <hr />
    
    
    <div class="box box-info">
        <div class="box-header with-border">
            <h3 class="box-title">Create a new account</h3>
        </div>
        <div class="box-body">
            <div class="col-lg-6">
                <div class="form-group">
                    <div class="col-md-12">
                        @Html.LabelFor(m => m.UserName, new { @class = "control-label" })

                        <div class='input-group'>
                            <span class="input-group-addon"><i class="fa fa-envelope"></i></span>
                            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                        </div>
                    </div>
                </div>


                <div class="form-group">

                    <div class="col-md-12">
                        @Html.LabelFor(m => m.Firstname, new { @class = "control-label" })

                        <div class='input-group'>
                            <span class="input-group-addon"><i class="fa fa-envelope"></i></span>
                            @Html.TextBoxFor(m => m.Firstname, new { @class = "form-control" })
                        </div>
                    </div>
                </div>
                <div class="form-group">

                    <div class="col-md-12">
                        @Html.LabelFor(m => m.Lastname, new { @class = "control-label" })

                        <div class='input-group'>
                            <span class="input-group-addon"><i class="fa fa-envelope"></i></span>
                            @Html.TextBoxFor(m => m.Lastname, new { @class = "form-control" })
                        </div>
                    </div>

                </div>
                <div class="form-group">


                    <div class="col-md-12">
                        @Html.LabelFor(m => m.Password, new { @class = "control-label" })

                        <div class='input-group'>
                            <span class="input-group-addon"><i class="fa fa-envelope"></i></span>
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                        </div>
                    </div>

                </div>
            </div>
            <div class="col-lg-6">
                <div class="form-group">

                    <div class="col-md-12">
                        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label" })

                        <div class='input-group'>
                            <span class="input-group-addon"><i class="fa fa-envelope"></i></span>
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                        </div>
                    </div>
                </div>
                <div class="form-group">

                    <div class="col-md-12">
                        @Html.LabelFor(m => m.Email, new { @class = "control-label" })

                        <div class='input-group'>
                            <span class="input-group-addon"><i class="fa fa-envelope"></i></span>
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                        </div>
                    </div>


                </div>
                <div class="form-group">

                    <div class="col-md-12">
                        @Html.LabelFor(m => m.Mobile, new { @class = "control-label" })

                        <div class='input-group'>
                            <span class="input-group-addon"><i class="fa fa-envelope"></i></span>
                            @Html.TextBoxFor(m => m.Mobile, new { @class = "form-control" })
                        </div>
                    </div>


                </div>
            </div>
            <hr />
            <div class="form-group">
                <div class="col-md-offset-3 col-md-6">
                    <input type="submit" class="btn btn-success btn-lg btn-block" value="Register" />
                </div>
                
            </div>
            <hr />
            @Html.ValidationSummary("", new { @class = "text-danger" })
        </div>
      
    </div>
   
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
<script>
    $(document).ready(function () {
        $('#formreset').click(function () {
            $('#registrationnForm').reset();
        });
       
    })
    </script>
}
